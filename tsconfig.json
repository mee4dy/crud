{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowJs": true,
    "composite": true,
    "baseUrl": "./packages",
    "outDir": "./dist",
    "paths": {
      "@mee4dy/crud-common/*": ["crud-common/src/*"],
      "@mee4dy/crud-orm/*": ["crud-orm/src/*"],
      "@mee4dy/crud-client/*": ["crud-client/src/*"],
      "@mee4dy/crud-nestjs/*": ["crud-nestjs/src/*"],
      "@mee4dy/crud-vuex/*": ["crud-vuex/src/*"],
      "@mee4dy/crud-ui/*": ["crud-ui/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
